<!DOCTYPE html>
<html>
    <head>
        <title>Page Title</title>
        
        
        
    </head>
    <body onload="loadImage()">
       
        <h1>Photo Gallery</h1>
        
        <img id = "pics" src = "URL">
        <br>
        
        <button id = "left" onclick = "left()">Left</button>
        <button id = "right" onclick = "right()">Right</button>
            
    </body>
</html>



body{
text-align: center;
}

button{
    margin-left: 50px;
    margin-right: 50px;
}

img{
    height: 250px;
    width: 300px;
}




var imgindex = 0;

var images = ["http://blog.ringcentral.com/wp-content/uploads/2011/05/sunnyclouds.jpg","https://tse1.mm.bing.net/th?id=OIP.hzHOS52Zh_F4X5Mm6GKW2wEsDI&pid=15.1","http://www.tenmilelake.org/photos/sunsets/sh_sunset1.jpg"];

function loadImage(){
    document.getElementById("pics").src = images[imgindex];
}

function left(){
    imgindex--;
if(imgindex < 0){
    imgindex = 2;
    }
    
    loadImage();
    document.getElementById("demo").innerHTML = imgindex;
}

function right(){
    imgindex++;
if(imgindex > 2){
    imgindex = 0;
    }

    loadImage();
    document.getElementById("demo").innerHTML = imgindex;
}


